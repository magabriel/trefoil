{
	"name": "magabriel/trefoil",
	"description": "Book publishing",
	"keywords": [
		"book",
		"publish",
		"ebook",
		"e-book",
		"documentation"
	],
	"homepage": "http://magabriel.github.io/trefoil-doc",
	"license": "MIT",
	"authors": [
		{
			"name": "Miguel Angel Gabriel",
			"email": "magabriel@gmail.com",
			"homepage": "https://github.com/magabriel/"
		}
	],
	"repositories": {
		"magabriel_easybook": {
			"type": "vcs",
			"url": "git@github.com:magabriel/easybook.git"
		},
		"magabriel_php_weasyprint": {
			"type": "vcs",
			"url": "git@github.com:magabriel/php-weasyprint.git"
		}
	},
	"require": {
		"php": ">=8.0",
		"easybook/easybook": "dev-master",
		"symfony/dom-crawler": "^2.3",
		"symfony/css-selector": "^2.3",
		"michelf/php-smartypants": "^1.8",
		"ext-intl": "*",
		"ext-mbstring": "*",
		"pontedilana/php-weasyprint": "dev-fix-stylesheet-option",
		"psr/log": "^1.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^9",
		"ext-tidy": "*"
	},
	"autoload": {
		"psr-0": {
			"Trefoil": "src/"
		}
	}
}