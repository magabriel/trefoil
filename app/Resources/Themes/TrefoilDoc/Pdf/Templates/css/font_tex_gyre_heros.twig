{% set fontsdir=app.get('trefoil.publishing.dir.themes') ~ '/' ~ edition.theme ~ '/Common/Resources/Fonts' %}

@font-face {
    font-family: tex-heros;
    font-style: normal;
    font-weight: 400;
    src: url("{{ fontsdir }}/Tex_Gyre_Heros/texgyreheros-regular.otf");
}

@font-face {
    font-family: tex-heros;
    font-style: normal;
    font-weight: 700;
    src: url("{{ fontsdir }}/Tex_Gyre_Heros/texgyreheros-bold.otf");
}

@font-face {
    font-family: tex-heros;
    font-style: italic;
    font-weight: 400;
    src: url("{{ fontsdir }}/Tex_Gyre_Heros/texgyreheros-italic.otf");
}

@font-face {
