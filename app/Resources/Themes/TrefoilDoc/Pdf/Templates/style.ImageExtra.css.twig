/*
 * Image Extra
 * ===========
 */
div.figure  {
    padding: 0;
    display: inline-block;
}

div.figure img {
    border: 1px solid #999;
    border-radius: 4px;
}

div.figure .box {
    border: 1px solid #aaa;
    padding: 5px 5px 0;
    display: inline-block;
}

div.figure img {
    margin: 0;
    width: 100%;
}

div.figure p.caption {
    text-align: center;
    color: #222222 !important;
    font-weight: bold;
    font-size: .8em;
    margin: .6em 0 .3em;
    padding: 0;
    font-style: italic;
}

/* **************************
 * figures with sizes and alignments
 * **************************
 */

div.figure.narrower,
div.figure.narrow,
div.figure.half,
div.figure.wide {
    float: left;
}

div.figure.left,
div.figure.right,
div.image.left,
div.image.right {
    display: inline;
    float: inherit;
}

div.figure.right {
    float: right;
}

div.figure.left {
    float: left;
}

div.figure,
div.image img  {
    min-width: 100px !important;
    width: 90%;
    display: inline-block;
}

/**** Medium *****/
div.figure.medium,
div.image img.medium {
    min-width: 100px !important;
    width: 80%;
    display: inline-block;
}

/**** Small *****/
div.figure.small,
div.image img.small {
    width: 60%;
}

/**** Narrow *****/
div.figure.narrow,
div.image img.narrow {
    min-width: 100px !important;
    width: 33.3%;
    display: inline-block;
}
div.figure.left.narrow,
div.image.left img.narrow {
    margin-right: 3%;
}
div.figure.right.narrow,
div.image.right img.narrow {
    margin-left: 3%;
}

/**** Narrower *****/
div.figure.narrower,
div.image img.narrower {
    min-width: 100px !important;
    width: 25%;
    display: inline-block;
}
div.figure.left.narrower,
div.image.left img.narrower {
    margin-right: 3%;
}
div.figure.right.narrower,
div.image.right img.narrower {
    margin-left: 3%;
}

/**** Half *****/
div.figure.half,
div.image img.half {
    min-width: 100px !important;
    width: 50%;
    display: inline-block;
}
div.figure.left.half,
div.image.left img.half  {
    margin-right: 3%;
}
div.figure.right.half,
div.image.right img.half {
    margin-left: 3%;
}

/**** Wide *****/
div.figure.wide,
div.image img.wide {
    min-width: 100px !important;
    width: 100%;
    display: inline-block;
}

/* figures centered with size */

div.figure.center.half,
div.figure.center.narrow,
div.figure.center.narrower {
    width: 100%;
}

div.figure.center.half .box {
    width: 50%;
    min-width: 50%;
}

div.figure.center.narrow .box {
    width: 33%;
    min-width: 33%;
}

div.figure.center.narrower .box {
    width: 25%;
    min-width: 25%;
}

div.image.narrower,
div.image.narrow,
div.image.half,
div.image.wide {
}

/* images centered with size */

div.image.center.half,
div.image.center.narrow,
div.image.center.narrower {
    width: 100%;
}

div.image.center.half img {
    width: 50%;
    min-width: 50%;
}

div.image.center.narrow img {
    width: 33%;
    min-width: 33%;
}

div.image.center.narrower img {
    width: 25%;
    min-width: 25%;
}
