<!-- 
========================================
Solution for:
Activity: {{ activity.id }}
Type....: {{ activity.type }} 
========================================
-->
<div class="solution solution-{{ activity.type }}" data-type="{{ activity.type }}">

{% set responses = ['a', 'b', 'c', 'd', 'f'] %}
{% for qindex, question in activity.questions  %}
    {% for rindex, response in question.responses %}

        {% set qid = 'a-'~activity.id ~ '_' ~ qindex %}
    
        {% if activity.heading.text %}
            <h5 id="{{ qid }}_{{ rindex }}">{{ activity.heading.text }}</h5>
        {% else %}    
            <h5 id="{{ qid }}_{{ rindex }}">Actividad {{ activity.id }}</h5>
        {% endif %}

        <h6>{{ qindex+1 }}. {{ question.text }}</h6>
        <p class="response">&raquo; {{ response }}</p>
    
        {% if question.solution == rindex %}
            <span class="image"><img src="images/res_ok.jpg"/></span>
            <span class="answer answer-ok">¡¡Respuesta correcta!!</span>
            {% if question.explanation|default('') %}
                <p>{{ question.explanation }}</p>
            {% endif %}
        {% else %}
            <span class="image"><img src="images/res_nook.jpg"/></span>
            <span class="answer answer-error">Respuesta incorrecta</span>
        {% endif %}
        
        <p><a href="#{{ qid }}">
            <span class="image"><img src="btn_volver.jpg" /></span>
        </a></p>
  
        <div class="page-break" ></div>      
    {% endfor %}
{% endfor %}

</div>