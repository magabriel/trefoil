{% block code %}
/* ==========================================================================
   @code
   ========================================================================== */
code, pre {
    font-family: monospace;
}

pre {
    margin: 0 0 1em;
    padding: 0 0 0 .5em;
    white-space: pre;
    white-space: pre-wrap;
    word-break: break-all;
}

h1 code, h2 code, h3 code, h4 code, h5 code, h6 code {
    font: inherit;
}
{% block highlighting %}
{# IMPORTANT: code highlighting doesn't work for ebooks: on e-ink readers,
the colored code is difficult to read. On advanced readers, such as the iPad,
the colored code isn't properly rendered with a monospaced font #}

    {% set color1 = 'color: #8E908C;' %}
    {% set color2 = 'color: #718C00;' %}
    {% set color3 = 'color: #8959A8;' %}
    {% set color4 = 'color: #3E999F;' %}
    {% set color5 = 'color: #C82829;' %}
    {% set color6 = 'color: #777;' %}
    {% set color7 = 'color: #4271AE;' %}
    {% set color8 = 'color: #F5871F;' %}

    {% set color1 = 'color: #555;' %}
    {% set color2 = 'color: #008;' %}
    {% set color3 = 'color: #800; font-weight: bold;' %}
    {% set color4 = 'color: #088;' %}
    {% set color5 = 'color: #C82829;' %}
    {% set color6 = 'color: #777;' %}
    {% set color7 = 'color: #4271AE; font-weight: bold;' %}
    {% set color8 = 'color: #F5871F;' %}

/* @highlighting
-------------------------------------------------------------------------- */
div.code .co1,        {# comments #}
div.code .co2,
div.code .co3,
div.code .co4
{ {{ color1 }} }
div.code .st_h,       {# strings #}
div.code .st0
{ {{ color2 }} }
div.code .kw1,        {# keywords #}
div.code .kw2,
div.code .kw3,
div.code .kw4
{ {{ color3 }} }
div.code .sy0         {# symbols #}
{ {{ color4 }} }

div.php .re0          {# variables #}
{ {{ color5 }} }
div.php .br0          {# brackets and parenthesis #}
{ {{ color6 }} }
div.php .sy0          {# equal symbol #}
{ {{ color4 }} }
div.php .kw1,         {# keywords such as if, return, as, ... #}
div.php .kw2
{ {{ color3 }} }
div.php .kw3          {# functions #}
{ {{ color7 }} }
div.php .kw4          {# true, false #}
{ {{ color8 }} }
div.php .st_h,        {# strings #}
div.php .st0,
div.php .co3          {# HEREDOC #}
{ {{ color2 }} }

div.yaml .co3,        {# keys #}
div.yaml .co4,
div.yaml .sy2         {# the ':' that separates keys from values #}
{ {{ color5 }} }
div.yaml .st0         {# strings #}
{ {{ color2 }} }
div.yaml .nu0         {# numbers #}
{ {{ color7 }} }

div.html .sc-1        {# comments #}
{ {{ color1 }} }
div.html .st0         {# strings #}
{ {{ color2 }} }
div.html .kw2         {# tags #}
{ {{ color5 }} }
div.html .kw3         {# attribute names #}
{ {{ color7 }} }
div.html .sc0         {# DOCTYPE #}
{ {{ color3 }} }

div.ini .re0          {# sections #}
{ {{ color5 }} }
div.ini .co0          {# comments #}
{ {{ color1 }} }
div.ini .re1          {# keys #}
{ {{ color3 }} }
div.ini .re2          {# values #}
{ {{ color2 }} }

div.sql .kw1          {# SELECT, INSERT, UPDATE, ... #}
{ {{ color3 }} }
div.sql .sy0          {# equal symbol #}
{ {{ color4 }} }
div.sql .st0          {# strings #}
{ {{ color2 }} }
div.sql .nu0          {# numbers #}
{ {{ color8 }} }

div.xml .sc-1         {# comments #}
{ {{ color1 }} }
div.xml .re1          {# tags #}
{ {{ color5 }} }
div.xml .re0          {# attribute names #}
{ {{ color7 }} }
div.xml .st0,         {# strings #}
div.xml .sc2          {# CDATA sections #}
{ {{ color2 }} }

div.twig .coMULTI     {# comments #}
{ {{ color1 }} }
div.twig .br0         {# brackets and parenthesis #}
{ {{ color5 }} }
div.twig .kw6,        {# {{, }}, {%, %}, ... #}
div.twig .br0 + .sy0, {# the '%' symbol after '{' character #}
div.twig .sy0 + .br0, {# the '%' symbol before '}' character #}
div.twig .re0,        {# variables, objects #}
div.twig .re1         {# objects properties #}
{ {{ color5 }} }
div.twig .kw1,        {# tags #}
div.twig .kw5,        {# is #}
div.twig .kw4         {# defined, ... #}
{ {{ color3 }} }
div.twig .st0         {# strings #}
{ {{ color2 }} }
div.twig .sy0         {# symbols such as '=', '|', ... #}
{ {{ color4 }} }
div.twig .kw2         {# filters #}
{ {{ color7 }} }
{% endblock %}
{% endblock %}