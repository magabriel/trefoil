{% extends '@theme_base/style.css.twig' %}

{% block theme_name        'fold' %}
{% block theme_description 'FOLD project' %}
{% block theme_updated_at  '16/december/2012' %}

{% set color_h1_underline   = '#335577' %}
{% set color_h2_underline   = '#555' %}
{% set color_h3_underline   = '#ccc' %}

{# ==========================================================================
   @items
   ========================================================================== #}
{% block body %}
{{ parent() }}
body {
    margin:0;
}
{% endblock %}

{% block paragraphs %}
{{ parent() }}
p {
    margin: .6em 0;
}
{% endblock %}

{% block cover %}
{{ parent() }}

.item.cover h1 {
    color: {{ color_black }};
    font-size: 2em;
    line-height: 1.1;
    padding: 1.5em .25em .25em 0;
    text-align: left;
}
.item.cover h2 {
    color: {{ color_gray }};
    font-size: 1em;
    font-weight: normal;
    margin-top: .5em;
    text-align: left;
}
{% endblock %}

{% block title %}
{{ parent() }}

.item.title h1,
.item.title h2,
.item.title h3 {
    font-weight: normal;
    text-align: center;
}
.item.title h1 {
    font-size: 2em;
    line-height: 1.1;
    margin-top: 1em;
    margin-bottom: 0;
}
.item.title h2 {
    font-size: 1.5em;
    margin-top: .5em;
}
.item.title h3 {
    font-size: 1em;
    font-style: italic;
    margin-top: 1em;
}
{% endblock %}

{% block dedication %}
{{ parent() }}

.item.dedication {
    padding-top: 5em;
}
.item.dedication h1.title {
    display: none;
}
.item.dedication p {
    font-style: italic;
    text-align: center;
}
{% endblock %}

{% block appendix %}
{{ parent() }}

.item.appendix h1 {
    margin: 5em 1em .25em 0;
}

.item.appendix h1 span {
    color: {{ color_gray }};
    display: block;
    font-size: 90%;
    font-weight: normal;
    padding-bottom: .25em;
}

.item.appendix h1 + h2,
.item.appendix h2 + h3,
.item.appendix h3 + h4,
.item.appendix h4 + h5,
.item.appendix h5 + h6 {
    margin-top: 1em;
}
{% endblock %}

{% block part %}
{{ parent() }}

.item.part h1 {
    font-size: 2em;
    margin: 0 0 1em;
    padding: 2em 0;
    text-align: center;
}
.item.part h1 span {
    border-bottom: 15px solid #88AABB;
    color: #116688;
    display: block;
    font-size: 2em;
    font-weight: bold;
    margin-bottom: 0.5em;
    padding-bottom: 0.5em;
}
{% endblock %}

{% block links %}
{{ parent() }}

a {
    background-image: url('../images/ico_externo.png');
    background-position: right;
    background-repeat: no-repeat;
    padding-right: 23px;
    padding-top: 3px;
    padding-bottom: 2px;
}

a[href*='pdf'] {
    background-image: url('../images/ico_pdf.png');
}

a[href*='youtube'] {
    background-image: url('../images/ico_youtube.png');
}

a.internal, .toc a {
    background-image: none;
    padding-right: 0;
}

a img {
    text-decoration: none;
}

/* Iconos y botones */
img.icon {
    height: 2em;
    width: auto;
}

img.button {
    height: 2em;
    width: auto;
}

h6 a {
    font-size: 1em;
    font-style: normal;
    font-weight: normal;
}
{% endblock %}

{% block headings %}
{{ parent() }}

h1, h2, h3, h4, h5, h6 {
	font-weight: bold;
	line-height: 1em;
}

h1, h2, h3, h4 {
    clear: both;
}

h1 {
	font-size: 1.8em;
	margin-top: 0;
}
h2 {
	font-size: 1.4em;
}
h3 {
	font-size: 1.4em;
}
h4 {
	font-size: 1.3em;
}
h5 {
	font-size: 1.25em;
}
h6 {
	font-size: 1.1em;
}

/* A h2 surrounded by hr's */
hr + h2 { margin-top: 1em; }
h2 + hr { margin-top: 1.5em; }

{% endblock %}

{% block lists %}
{{ parent() }}

ul, ol {
    margin-left: 0;
    margin-top: .5em;
}

ul li li {
    list-style-type: circle;
}

ul li li li {
    list-style-type: square;
}

dd+dt {
    margin-top: 1em;
}

{% endblock %}

{% block misc %}
{{ parent() }}

blockquote {
    margin: 1em 0 1em 2.5em;
}

/* This is the only way to force a page-break for Kindle
 * page-break-after, etc. do not work when assigned to another selector
 */
.page-break {
  page-break-after: always;
}

.clearfix {
    clear: both;
}

/*
 * Kindle specific
 */
@media amzn-mobi {
	.mobi {display: block;}
	.kf8  {display: none;}
	.not-mobi {display: none;}
}

@media not amzn-mobi {
	.mobi {display: none;}
    .kf8  {display: none;}
    .not-mobi {display: block;}
}

@media amzn-kf8 {
	.mobi {display: none;}
    .kf8  {display: block;}
    .not-mobi {display: block;}
}

/*
 * Cuadros
 */
