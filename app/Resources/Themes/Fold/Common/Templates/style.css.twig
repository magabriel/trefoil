    padding: .5em;
    border: 1px solid #666;
    display: block;
    clear: both;
}

    .cuadro h5 {
        font-size: 1.2em;
        margin-top: 0;
        margin-bottom: 0.6em;
        border-bottom: 0 !important;
    }

    .cuadro h6 {
