/* @kindle mobi compatibilidad
   -------------------------------------------------------------------------- */
@media amzn-mobi {

	body {
    	margin-right: 0;
     	margin-left: 0;
     	padding: 0;
	}

	div.container {
        padding: 0;
    }

	h1, h2, h3, h4, h5, h6 {
    	text-align: left;
    	margin-top: 0.2em;
    	margin-bottom: 0.3em;
    	page-break-inside: avoid;
    	page-break-after: avoid;
    }

    h1+p, h2+p, h3+p, h4+p, h5+p, h6+p { margin-top:.5em; }

	p {
    	margin-top: 10px;
    	margin-bottom: 10px;
    	text-indent: 0;
    }

    p+p, li+li, ul, ol {
        margin-top: 0;
    }

	table {
    	border-collapse: collapse;
    	border-spacing: 0;
    }

    .cuadro, .bloque, .glosario, auto-glossary {
        margin: 0;
        padding: 0;
        border: 0; /* necesario para IOS */
        background: #fff; /* necesario para IOS */
    }

    .cuadro p, .bloque p {
         font-size: .8em;
    }

    dd {
        font-size: .6em;
    }
}

/* @kindle kf8 compatibilidad
   -------------------------------------------------------------------------- */
@media amzn-kf8 {
    div.container {
        padding: 0;
    }

    .cuadro-legislacion dd:before {
        top: -0.4em;
     }
}

