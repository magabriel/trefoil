{% block images %}
{{ parent() }}

/* .image => images that are not figures
 * div.image => style like a figure
 * span.image => style like an inline image
 */
div.image.center,
div.image.left,
div.image.right {
    display: inline-block;
 }

 div.image.center {
    width: 100%;
 }

    /* only min-max size if has alignment */
    div.image.center img,
    div.image.left img,
    div.image.right img   {
         min-width: 50%;
         max-width: 100%;
         display: inline-block;
    }

span.image {
}

/* .figure => figures, with caption */
.figure {
    text-align: center;
    page-break-inside: avoid;
}

    .figure img {
        min-width: 50%;
        max-width: 100%;
    }

/* caption for figures */
p.caption {
	font-style: italic;
	font-size: .9em;
}

/*
 * Image Extra
 * ===========
 */
div.figure.left,
div.figure.right,
div.image.left,
div.image.right {
    Qdisplay: inherit;
    display: inline;
    float: inherit;
}

/* Normal = 2/3 */
div.figure img,
div.image img  {
    min-width: 100px !important;
    width: 64%;
    display: inline-block;
}

div.figure img.narrow,
div.image img.narrow {
    min-width: 100px !important;
    width: 31%;
    display: inline-block;
}
    div.figure.left img.narrow,
    div.image.left img.narrow {
        margin-right: 3%;
    }
    div.figure.right img.narrow,
    div.image.right img.narrow {
        margin-left: 3%;
    }
    div.figure.left + div.figure.left + div.figure.left img.narrow
    div.image.left + div.image.left + div.image.left img.narrow {
        margin-right: 0;
    }

div.figure img.narrower,
div.image img.narrower {
    min-width: 100px !important;
    width: 25%;
    display: inline-block;
}
    div.figure.left img.narrower,
    div.image.left img.narrower {
        margin-right: 3%;
    }
    div.figure.right img.narrower,
    div.image.right img.narrower {
        margin-left: 3%;
    }
    div.figure.left + div.figure.left + div.figure.left img.narrower
    div.image.left + div.image.left + div.image.left img.narrower {
        margin-right: 0;
    }

div.figure img.half,
div.image img.half {
    min-width: 100px !important;
    width: 48%;
    display: inline-block;
}
    div.image.left img.half,
    div.figure.left img.half  {
        margin-right: 3%;
    }
    div.image.right img.half,
    div.figure.right img.half {
        margin-left: 3%;
    }
    div.image.left + div.image.left img.half,
    div.figure.left + div.figure.left img.half  {
        margin-right: 0;
    }

div.image img.wide,
div.figure img.wide {
    min-width: 100px !important;
    width: 100%;
    display: inline-block;
}

/*
 * Image SFX
 * ===========
 */
div.figure.left img,
div.figure.right img {
    border: 4px solid #DDDDDD;
}

div.figure p.caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: center;
    line-height: 1;
    margin: 1em 10%;
}

div.figure.left p.caption,
div.figure.right p.caption {
    background-color: #DDDDDD;
    border: 8px solid #DDDDDD;
    border-radius: 8px 8px 8px 8px;
    padding: 2px;
}

div.figure.left p.caption,
div.figure.right p.caption {
    margin-top: 0;
    margin-bottom: 2em;
    text-align: left;
}

