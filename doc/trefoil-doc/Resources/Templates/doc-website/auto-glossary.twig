{% block body %}
<div class="item auto-glossary">
    <h1 class="title" id="{{ item.slug }}"><span>{{ item.label }}</span> {{ item.title }}</h1>

    {{ item.content }}

    {% for term, data in app['publishing.glossary.definitions'] %}
        {% for aIndex, anchorLink in data.anchorLinks %}

        <div class="definition" id="auto-glossary-{{ data.slug }}-{{ aIndex }}">
            <hr/>
            <dl>
                <dt>{{ data.variants.0 }}:</dt>
                <dd>
                    <div class="description">{{ data.description }}</div>
                    <div class="backlink">
                        <p><a href="#{{ anchorLink }}">[&#8617;]</a></p>
                    </div>
                </dd>
            </dl>
        </div>
        
        {% endfor %}
    {% endfor %}
    <hr/>
    
</div>
{% endblock %}
