/*
* Paperdle
* ==========
*/

/****
* General
*/

.paperdle-title {
  font-size: 1.2em;
  font-weight: bold;
  width: 100%;
  line-height: 1em;
  text-align: center;
}

.paperdle-text {
  font-size: 1em;
  width: 100%;
  line-height: 1em;
  text-align: center;
}

.paperdle-text2 {
  font-size: 0.8em;
  width: 100%;
  line-height: 1em;
  text-align: center;
}

/****
* Board
*/

.paperdle-board-container {
  display: inline-block;
  margin-bottom: 0.5em;
  padding: 0.5em;
}

.paperdle-board table {
  margin: 1em auto;
  width: auto;
  padding: 0px;
  border: 0px;
  border-collapse: separate;
  border-spacing: 1px;
}

.paperdle-board th {
  font-weight: bold;
  border: 0;
  font-size: 1.2em;
  padding: 0.2em 0.5em;
  text-align: center;
  vertical-align: bottom;
}

.paperdle-board td {
  border: 2px solid grey;
  border-radius: 4px;
  width: 2em;
  height: 2em;
  text-align: center;
  padding: 0;
  margin: 0;
  font-size: 1em;
  line-height: 2em;
  background: white;
  box-shadow: 6px 6px 6px lightgray;
}

/****
* Letters
*/

.paperdle-letters-container {
  display: inline-block;
  margin-bottom: 0.5em;
  padding: 0.5em;
}

.paperdle-letters table {
  margin: 1em auto;
  width: auto;
  padding: 0px;
  border: 0px;
  border-collapse: separate;
  border-spacing: 1px;
}

.paperdle-letters td {
  border: 2px solid grey;
  border-radius: 11px;
  width: 2em;
  height: 2em;
  text-align: center;
  padding: 0;
  margin: 0;
  font-size: 1em;
  line-height: 2em;
  background: white;
  box-shadow: 6px 6px 6px lightgray;
}

/****
* Solution
*/

.paperdle-solution-container {
  display: inline-block;
  margin-bottom: 0.5em;
  padding: 0.5em;
}

.paperdle-solution {
  border: 2px solid gray;
  border-radius: 6px;
  display: inline-block;
  padding: 0.2em 0.3em;
  font-size: 1.1em;
  font-family: monospace;
}

/****
* Other tables
*/

.paperdle-randomizer-container,
.paperdle-decoder-container,
.paperdle-solution-decoder-container {
  display: inline-block;
  margin-bottom: 0.5em;
  padding: 0.5em;
}

.paperdle-randomizer-container .paperdle-heading,
.paperdle-decoder-container .paperdle-heading,
.paperdle-solution-decoder-container .paperdle-heading {
  float: left;
  width: 10em;
}

.paperdle-randomizer-container .paperdle-text2,
.paperdle-decoder-container .paperdle-text2,
.paperdle-solution-decoder-container .paperdle-text2 {
  float: left;
  width: auto;
}

.paperdle-randomizer,
.paperdle-decoder,
.paperdle-solution-decoder {
  float: left;
}

.paperdle-randomizer table,
.paperdle-decoder table,
.paperdle-solution-decoder table {
  margin: 0 1em;
  width: auto;
  padding: 0px;
  border: 0px;
  border-collapse: collapse;
  border-spacing: 1px;
}

.paperdle-randomizer th,
.paperdle-decoder th,
.paperdle-solution-decoder th {
  font-weight: bold;
  border: 0;
  font-size: 1em;
  padding: 0.1em 0.3em;
  text-align: center;
  vertical-align: bottom;
}

.paperdle-randomizer td,
.paperdle-decoder td,
.paperdle-solution-decoder td {
  border: 1px solid lightgrey;
  width: 1.5em;
  height: 1em;
  text-align: center;
  vertical-align: middle;
  padding: 0;
  margin: 0;
  font-size: 1em;
  line-height: 1em;
}
